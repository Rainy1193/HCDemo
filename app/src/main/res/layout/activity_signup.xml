<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_temp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_height="50dp">
        <include
            android:id="@+id/nav_step_1"
            layout="@layout/navigation_content_1"
            android:visibility="visible" />
        <include
            android:id="@+id/nav_step_2"
            layout="@layout/navigation_content_2"
            android:visibility="gone" />
        <include
            android:id="@+id/nav_step_3"
            layout="@layout/navigation_content_3"
            android:visibility="gone" />
        <include
            android:id="@+id/nav_step_4"
            layout="@layout/navigation_content_4"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrey" />

    <com.homecaravan.android.ui.MyViewPager
        android:id="@+id/vpSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

    </com.homecaravan.android.ui.MyViewPager>
</LinearLayout>