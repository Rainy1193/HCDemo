<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:background="@drawable/bg_ast_cart_item"
    >
        <RelativeLayout
            android:id="@+id/layoutCalendarDay"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1">
                 <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    tools:text="Text Line Item"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lavoutRemoveTime"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/bg_ast_cart_item_remove"
            android:layout_weight="0">
                <TextView
                    android:id="@+id/tvRemoveTime"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/icon_close"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp" />
        </RelativeLayout>

</LinearLayout>


