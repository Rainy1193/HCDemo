<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="40dp"
    android:layout_height="47dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCalendar"
        style="@style/TextViewMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/colorMenuConsumer"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/viewCanceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_appt_canceled" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewCaravan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_appt_caravan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_appt_pending" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>