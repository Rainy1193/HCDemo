<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/layoutParticipantItem"
    android:paddingTop="@dimen/margin_save_search_item"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingBottom="@dimen/margin_save_search_item">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgAvatarParticipant"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sana"
        app:riv_border_color="@color/colorMenuConsumer"
        app:riv_border_width="2dp"
        app:riv_corner_radius="30dp" />

    <TextView
        android:id="@+id/tvParticipantName"
        style="@style/TextViewItemDashboard3"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgAvatarParticipant"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:textColor="@color/colorDashboardText" />

    <View
        android:id="@+id/vStatus"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@id/imgAvatarParticipant"
        android:layout_alignEnd="@id/imgAvatarParticipant"
        android:layout_margin="4dp"
        android:background="@drawable/bg_agent_active" />
</RelativeLayout>