<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_dialog_message"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Take action for your appointment"
            android:textSize="@dimen/text_size_custom_big"
            android:textStyle="bold"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/colorMain"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Add a message to the client"
            android:textSize="@dimen/text_size_custom_lang"/>

        <EditText
            android:textStyle="italic"
            android:textColor="@color/colorGrey"
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:gravity="top"
            android:hint="Send your client a request to reschedule this appointment"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="5dp"
            android:textSize="@dimen/text_size_custom_normal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_cancel_appt"
                android:gravity="center"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/colorGrayTitleBar"/>

            <TextView
                android:id="@+id/tvSend"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_keep_appt"
                android:gravity="center"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>