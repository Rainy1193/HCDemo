<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@color/colorWhite"
    android:elevation="1dp">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivListing"
                android:layout_width="132dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="#E2E6EE" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_margin4"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddress1"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/colorTextMain"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAddress2"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/colorTextMain"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/TextViewItemDashboard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/discover_margin4"
                    android:textColor="@color/colorBuy"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_discover"
                        android:layout_height="@dimen/icon_discover"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/ic_living_discover" />

                    <TextView
                        android:id="@+id/tvLiving"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/discover_margin3"
                        android:textColor="@color/colorTextMain"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/discover_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_discover"
                        android:layout_height="@dimen/icon_discover"
                        android:layout_gravity="center_vertical"
                        android:padding="1dp"
                        android:src="@drawable/ic_bed_discover" />

                    <TextView
                        android:id="@+id/tvBed"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/discover_margin3"
                        android:textColor="@color/colorTextMain"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/discover_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_discover"
                        android:layout_height="@dimen/icon_discover"
                        android:layout_gravity="center_vertical"
                        android:padding="1dp"
                        android:src="@drawable/ic_bath_listing_consumer" />

                    <TextView
                        android:id="@+id/tvBath"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/discover_margin3"
                        android:textColor="@color/colorTextMain"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/center"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:background="#E2E6EE" />

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:id="@+id/layoutStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/layoutBgStatus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/ic_none_ticker">

                            <ImageView
                                android:id="@+id/ivStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_favorited_consumer" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutQueue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivAddQueue"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:background="?android:selectableItemBackground"
                            android:src="@drawable/ic_add_schedule" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBookSingle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView

                            android:id="@+id/ivBookSingle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:background="?android:selectableItemBackground"
                            android:src="@drawable/ic_book_single" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
