<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/shadowBar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/bg_below_action_bar" />
        <TextView
            android:id="@+id/tvInfoListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlueMain"
            android:textSize="@dimen/text_size_custom_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_first_available" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etDateFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/ic_drop_down"
                android:focusableInTouchMode="false"
                android:inputType="textVisiblePassword"
                android:textColorHint="@color/colorEditTextHint"
                android:textSize="@dimen/text_size_custom_lang"
                app:met_baseColor="@color/colorEditText"
                app:met_errorColor="@color/color_validate_error"
                app:met_floatingLabel="none"
                app:met_floatingLabelPadding="10dp"
                app:met_floatingLabelTextColor="@color/colorEditText"
                app:met_primaryColor="@color/colorMain"
                app:met_textColor="@color/colorEditText"
                app:met_textColorHint="@color/colorEditTextHint"
                app:met_underlineColor="@color/colorTransparentImage" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_through" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etBookThrough"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/ic_drop_down"
                android:focusableInTouchMode="false"
                android:inputType="textVisiblePassword"
                android:text="1 Week"
                android:textColorHint="@color/colorEditTextHint"
                android:textSize="@dimen/text_size_custom_lang"
                app:met_baseColor="@color/colorEditText"
                app:met_errorColor="@color/color_validate_error"
                app:met_floatingLabel="none"
                app:met_floatingLabelPadding="10dp"
                app:met_floatingLabelTextColor="@color/colorEditText"
                app:met_primaryColor="@color/colorMain"
                app:met_textColor="@color/colorEditText"
                app:met_textColorHint="@color/colorEditTextHint"
                app:met_underlineColor="@color/colorTransparentImage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment_length" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etAppointmentLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/ic_drop_down"
                android:focusableInTouchMode="false"
                android:inputType="textVisiblePassword"
                android:text="30 Minutes"
                android:textColorHint="@color/colorEditTextHint"
                android:textSize="@dimen/text_size_custom_lang"
                app:met_baseColor="@color/colorEditText"
                app:met_errorColor="@color/color_validate_error"
                app:met_floatingLabel="none"
                app:met_floatingLabelPadding="10dp"
                app:met_floatingLabelTextColor="@color/colorEditText"
                app:met_primaryColor="@color/colorMain"
                app:met_textColor="@color/colorEditText"
                app:met_textColorHint="@color/colorEditTextHint"
                app:met_underlineColor="@color/colorTransparentImage" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_daily_appointment" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etFirstDayAppt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:focusableInTouchMode="false"
                    android:inputType="textVisiblePassword"
                    android:text="09 AM"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="@dimen/text_size_custom_lang"
                    app:met_baseColor="@color/colorEditText"
                    app:met_errorColor="@color/color_validate_error"
                    app:met_floatingLabel="none"
                    app:met_floatingLabelPadding="10dp"
                    app:met_floatingLabelTextColor="@color/colorEditText"
                    app:met_primaryColor="@color/colorMain"
                    app:met_textColor="@color/colorEditText"
                    app:met_textColorHint="@color/colorEditTextHint"
                    app:met_underlineColor="@color/colorTransparentImage" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Hide"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etHaftFirstDayAppt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/ic_drop_down"
                        android:focusableInTouchMode="false"
                        android:inputType="textVisiblePassword"
                        android:text="00"
                        android:textColorHint="@color/colorEditTextHint"
                        android:textSize="@dimen/text_size_custom_lang"
                        app:met_baseColor="@color/colorEditText"
                        app:met_errorColor="@color/color_validate_error"
                        app:met_floatingLabel="none"
                        app:met_floatingLabelPadding="10dp"
                        app:met_floatingLabelTextColor="@color/colorEditText"
                        app:met_primaryColor="@color/colorMain"
                        app:met_textColor="@color/colorEditText"
                        app:met_textColorHint="@color/colorEditTextHint"
                        app:met_underlineColor="@color/colorTransparentImage" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showing_conclude_daily" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etConclude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:focusableInTouchMode="false"
                    android:inputType="textVisiblePassword"
                    android:text="08 PM"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="@dimen/text_size_custom_lang"
                    app:met_baseColor="@color/colorEditText"
                    app:met_errorColor="@color/color_validate_error"
                    app:met_floatingLabel="none"
                    app:met_floatingLabelPadding="10dp"
                    app:met_floatingLabelTextColor="@color/colorEditText"
                    app:met_primaryColor="@color/colorMain"
                    app:met_textColor="@color/colorEditText"
                    app:met_textColorHint="@color/colorEditTextHint"
                    app:met_underlineColor="@color/colorTransparentImage" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Hide"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etHaftConclude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_drop_down"
                        android:focusableInTouchMode="false"
                        android:inputType="textVisiblePassword"
                        android:text="00"
                        android:textColorHint="@color/colorEditTextHint"
                        android:textSize="@dimen/text_size_custom_lang"
                        app:met_baseColor="@color/colorEditText"
                        app:met_errorColor="@color/color_validate_error"
                        app:met_floatingLabel="none"
                        app:met_floatingLabelPadding="10dp"
                        app:met_floatingLabelTextColor="@color/colorEditText"
                        app:met_primaryColor="@color/colorMain"
                        app:met_textColor="@color/colorEditText"
                        app:met_textColorHint="@color/colorEditTextHint"
                        app:met_underlineColor="@color/colorTransparentImage" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etTimeFormat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:focusableInTouchMode="false"
                android:hint="@string/time_format"
                android:inputType="textVisiblePassword"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:text="12h"
                android:textColorHint="@color/colorEditTextHint"
                android:textSize="@dimen/text_size_custom_lang"
                app:met_baseColor="@color/colorBlack"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="15dp"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorMain" />

            <TextView
                android:id="@+id/tvDownTimeFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="@string/icon_down" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/number_appointments"
            android:textSize="@dimen/text_size_custom_lang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/btMinusConcurrent"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_search_left"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />

            <Button
                android:id="@+id/btConcurrent"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:background="@drawable/bg_button_search_center"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />

            <Button
                android:id="@+id/btPlusConcurrent"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_search_right"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/required_showings"
            android:textSize="@dimen/text_size_custom_lang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/btMinusNotice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_search_left"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />

            <Button
                android:id="@+id/btNotice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:background="@drawable/bg_button_search_center"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />

            <Button
                android:id="@+id/btPlusNotice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_search_right"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/colorMain" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/days_available"
            android:textSize="@dimen/text_size_custom_lang" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp">

            <TableRow>

                <CheckBox
                    android:id="@+id/cbSun"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/sunday" />

                <CheckBox
                    android:id="@+id/cbThursday"
                    android:layout_marginLeft="20dp"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/thursday" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbMonday"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/monday" />

                <CheckBox
                    android:id="@+id/cbFriday"
                    android:layout_marginLeft="20dp"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/friday" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbTuesday"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/tuesday" />

                <CheckBox
                    android:id="@+id/cbSaturday"
                    android:layout_marginLeft="20dp"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/saturday" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbWednesday"
                    android:checked="true" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="@string/wednesday" />

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/layoutTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorMain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Setting"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_custom_big"></TextView>

            <TextView
                android:id="@+id/tvShowSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:paddingRight="10dp"
                android:text="@string/icon_angle_down"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout

            android:id="@+id/layoutSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etAllowPending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:focusableInTouchMode="false"
                    android:hint="Allow Pending Approval Timeslots"
                    android:inputType="textVisiblePassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/yes"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="@dimen/text_size_custom_lang"
                    app:met_baseColor="@color/colorBlack"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelPadding="15dp"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/colorMain" />

                <TextView
                    android:id="@+id/tvDownAllowPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/icon_down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Template" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:focusableInTouchMode="false"
                    android:inputType="textVisiblePassword"
                    android:text="Available"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="@dimen/text_size_custom_lang"
                    app:met_baseColor="@color/colorEditText"
                    app:met_errorColor="@color/color_validate_error"
                    app:met_floatingLabel="none"
                    app:met_floatingLabelPadding="10dp"
                    app:met_floatingLabelTextColor="@color/colorEditText"
                    app:met_primaryColor="@color/colorMain"
                    app:met_textColor="@color/colorEditText"
                    app:met_textColorHint="@color/colorEditTextHint"
                    app:met_underlineColor="@color/colorTransparentImage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability Suggestion Tool" />

                <Switch
                    android:id="@+id/switchSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="true" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_black"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/time_available"
                            android:gravity="center"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Available" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_black"
                        android:padding="1dp"
                        tools:ignore="TooManyViews">

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/time_unavailable"
                            android:gravity="center"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Unavailable" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btNext"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_green_large"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:textSize="18dp" />
            </LinearLayout>

