<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:scrollbarThumbVertical="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_schedule1"
                android:text="@string/step_schedule_four"
                android:textColor="@color/colorMenuConsumer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorBgFragment" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layoutSelectAgent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorMenuConsumer"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_select_agents1">

                        <TextView
                            style="@style/TextViewMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_select_agents"
                            android:text="@string/select_agent_tab1"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNumberListingCaravan"
                            style="@style/TextViewMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_select_agents"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextViewMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_select_agents"
                            android:text="@string/select_agent_tab1_1"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp" />

                        <TextView
                            style="@style/TextViewMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_select_agents"
                            android:layout_marginTop="@dimen/margin_select_agents"
                            android:text="@string/select_agent_tab1_2"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutIntroducedAgent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_select_agents1"
                            android:layout_marginStart="@dimen/margin_select_agents1"
                            android:layout_marginTop="@dimen/margin_select_agents1"
                            android:background="@drawable/bg_option_select_agent"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_select_agents1">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_introduced" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextViewMain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_select_agents1"
                                    android:text="I would like"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TextViewMain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_select_agents1"
                                    android:text="to be introduced to an agent"
                                    android:textColor="#ffd16b"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutExclusiveAgent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_select_agents1"
                            android:layout_marginStart="@dimen/margin_select_agents1"
                            android:layout_marginTop="@dimen/margin_select_agents1"
                            android:background="@drawable/bg_option_select_agent"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_select_agents1">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_exclusive" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextViewMain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_select_agents1"
                                    android:text="I would like"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TextViewMain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_select_agents1"
                                    android:text="to select an exclusive agent"
                                    android:textColor="#ffd16b"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutMeetListingAgents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_select_agents1"
                            android:layout_marginStart="@dimen/margin_select_agents1"
                            android:layout_marginTop="@dimen/margin_select_agents1"
                            android:background="@drawable/bg_option_select_agent"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_select_agents1"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_meet_listing_agents" />

                            <TextView
                                android:id="@+id/tvMeetListingAgent"
                                style="@style/TextViewMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/margin_select_agents1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutLoyalAgent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_select_agents1"
                            android:layout_marginStart="@dimen/margin_select_agents1"
                            android:layout_marginTop="@dimen/margin_select_agents1"
                            android:background="@drawable/bg_option_select_agent"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_select_agents1"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_meet_several_agents" />

                            <TextView
                                android:id="@+id/tvLoyalAgent"
                                style="@style/TextViewMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/margin_select_agents1"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAgent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <com.homecaravan.android.consumer.widget.CustomNestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBgFragment"
                    android:scrollbarThumbVertical="@null"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/itemInfoTop"
                            android:layout_width="match_parent"
                            android:layout_height="124dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_save_search_item_1"
                            android:elevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/margin_top_bottom_agent_profile"
                                android:layout_marginLeft="@dimen/margin_left_right_agent_profile"
                                android:layout_marginRight="@dimen/margin_left_right_agent_profile"
                                android:layout_marginTop="@dimen/margin_top_bottom_agent_profile"
                                android:layout_toRightOf="@+id/vHeaderRealtor"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:gravity="center">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/ivAgent"
                                        android:layout_width="90dp"
                                        android:layout_height="100dp"
                                        android:layout_gravity="center"
                                        app:riv_border_color="@color/colorAroundImage"
                                        app:riv_border_width="2dp"
                                        app:riv_corner_radius="32dip" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="9"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvNameAgent"
                                        style="@style/TextViewItemDashboard3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:textColor="@color/colorNameAgent"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/tvCompanyAgent"
                                        style="@style/TextViewItemDashboard3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:paddingBottom="8dp"
                                        android:textColor="@color/colorNameCompany"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/ivLogoCompany"
                                        android:layout_width="66dp"
                                        android:layout_height="0dp"
                                        android:layout_gravity="left"
                                        android:layout_weight="2" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivActionAgent"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="12dp"
                                        android:src="@drawable/ic_consumer_myteam_user_settings" />

                                    <RelativeLayout
                                        android:id="@+id/rlMessage"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1">

                                        <FrameLayout
                                            android:id="@+id/frmMessage"
                                            android:layout_width="104dp"
                                            android:layout_height="32dp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentRight="true"
                                            android:background="@drawable/button_user_profile_consumer"
                                            android:paddingLeft="16dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="Message"
                                                android:textColor="@color/white"
                                                android:textSize="13sp" />
                                        </FrameLayout>

                                        <ImageView
                                            android:layout_width="@dimen/icon_in_message_button"
                                            android:layout_height="@dimen/icon_in_message_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginBottom="9dp"
                                            android:layout_marginRight="-24dp"
                                            android:layout_toLeftOf="@+id/frmMessage"
                                            android:src="@drawable/ic_consumer_myteam_message_color_white" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:layout_below="@id/itemInfoTop"
                            android:layout_marginTop="8dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@color/colorBackgroundContact"
                                android:gravity="center"
                                android:text="Contact"
                                android:textColor="@color/colorTextViewAgentProfile"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:src="@drawable/ic_consumer_myteam_call" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="2dp"
                                    android:text="Mobile number"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvPhoneAgent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="16"
                                    android:gravity="right|center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="6dp"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:src="@drawable/ic_consumer_agent_profile_email" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="2dp"
                                    android:text="Email"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvEmailAgent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="16"
                                    android:gravity="right|center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="6dp"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:src="@drawable/ic_consumer_agent_profile_address" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="2dp"
                                    android:text="Address"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvAddressAgent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="16"
                                    android:gravity="right|center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="6dp"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:src="@drawable/ic_consumer_agent_profile_connect" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingLeft="2dp"
                                    android:text="Connect"
                                    android:textColor="@color/colorTextViewAgentProfile"
                                    android:textSize="14sp" />

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="16">

                                    <RelativeLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="48dp"
                                        android:background="@drawable/button_facebook_login_consumer">

                                        <ImageView
                                            android:id="@+id/tvIconFacebook"
                                            android:layout_width="14dp"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/ic_facebook_consumer"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/text_size_custom_big" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="right"
                                        android:background="@drawable/button_linkedin_login_consumer">

                                        <ImageView
                                            android:id="@+id/tvIconLinkedIn"
                                            android:layout_width="14dp"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:layout_marginRight="5dp"
                                            android:src="@drawable/ic_linkedin_consumer"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/text_size_custom_big" />

                                    </RelativeLayout>


                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                </com.homecaravan.android.consumer.widget.CustomNestedScrollView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>