<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView

            android:id="@+id/ivUpload"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/ivDrap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignLeft="@+id/ivUpload"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_icon_drap"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:text="@string/icon_move"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivRemove"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/ivUpload"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_remove_image_upload"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>