<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutAstAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlueMain">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvChat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/icon_chat"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/tvNewMessagesCount2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="false"
                    android:background="@drawable/circle"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:visibility="visible"
                    android:layout_marginLeft="18dp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:gravity="center_vertical|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Respond to Request"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tvRespond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/icon_reply"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>