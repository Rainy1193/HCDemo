<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/bg_save_search_item_1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_save_search_item">

        <TextView
            android:id="@+id/tvNameSearch"
            style="@style/TextViewItemDashboard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_save_search_item"
            android:layout_marginLeft="@dimen/margin_save_search_item"
            android:layout_marginTop="@dimen/margin_save_search_item"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorDashboardText"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutInfoSaveSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameSearch"
            android:layout_marginLeft="@dimen/margin_save_search_item"
            android:layout_marginRight="@dimen/margin_save_search_item"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_save_search_item"
                        android:layout_height="@dimen/icon_save_search_item"
                        android:src="@drawable/ic_save_search_3" />

                    <TextView
                        android:id="@+id/tvBed"
                        style="@style/TextViewItemDashboard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorDashboardText"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/icon_save_search_item"
                    android:layout_height="@dimen/icon_save_search_item"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_save_search_1" />

                <TextView
                    android:id="@+id/tvBath"
                    style="@style/TextViewItemDashboard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorDashboardText"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/icon_save_search_item"
                    android:layout_height="@dimen/icon_save_search_item"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_save_search_2" />

                <TextView
                    android:id="@+id/tvSize"
                    style="@style/TextViewItemDashboard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorDashboardText"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/layoutInfoSaveSearch"
                android:layout_marginBottom="@dimen/margin_save_search_item"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="@dimen/margin_save_search_item"
                android:background="#E9EDEF" />

            <TextView
                android:id="@+id/tvFound"
                style="@style/TextViewItemDashboard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_save_search_item"
                android:textColor="@color/colorBottomBar"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvNew"
                style="@style/TextViewItemDashboard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_save_search_item"
                android:layout_marginLeft="@dimen/margin_save_search_item"
                android:layout_marginTop="@dimen/margin_save_search_item"
                android:textColor="#FFCE3F"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>